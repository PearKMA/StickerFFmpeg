<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#464547">

    <LinearLayout
        android:id="@+id/layout_sticker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvSticker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="24dp"
                android:paddingTop="@dimen/margin_16dp"
                android:paddingEnd="@dimen/margin_16dp"
                android:paddingBottom="@dimen/margin_16dp" />

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="@dimen/size_button"
                android:layout_height="@dimen/size_button"
                android:layout_gravity="center"
                android:indeterminate="true" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnAnimal"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_button"
                android:layout_marginStart="@dimen/margin_16dp"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:src="@drawable/ic_animal" />

            <ImageView
                android:id="@+id/btnEmotion"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_button"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:src="@drawable/ic_emotion" />

            <ImageView
                android:id="@+id/btnFish"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_button"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:src="@drawable/ic_fish" />

            <ImageView
                android:id="@+id/btnFruit"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_button"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:src="@drawable/ic_fruit" />

            <ImageView
                android:id="@+id/btnLove"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_button"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:layout_weight="1"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:src="@drawable/ic_love" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/layout_timer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
